<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bluemobi.pro.service.impl.DoctorService">
	
	<resultMap type="com.bluemobi.pro.entity.Doctor" id="doctorMap">
		<id column="ID" property="id"/>
		<result column="NAME" property="name"/>
		<result column="DETAIL" property="detail"/>
		<result column="DEPART" property="depart"/>
		<result column="DOMAIN" property="domain"/>
		<result column="MOBILE" property="mobile"/>
		<result column="TEL" property="tel"/>
		<result column="HEAD" property="head"/>
		<result column="GENDER" property="gender"/>
		<result column="AGE" property="age"/>
		<result column="LEVEL" property="level"/>
		<result column="BIRTHDAY" property="birthday"/>
		<result column="ONLINE" property="online"/>
		<result column="TYPE" property="type"/>
	</resultMap>
	
	<!-- 家庭医生列表 -->
	<select id="page" parameterType="map" resultMap="doctorMap">
		SELECT
			t.ID,
			t.NAME,
			t.DETAIL,
			t.MOBILE,
			t.HEAD,
			t.GENDER,
			t.AGE,
			t.ONLINE,
			t.BIRTHDAY
		FROM
			t_doctor t
		WHERE
			t.TYPE = 1 
		ORDER BY
			t.ID
	</select>
	
	<!-- 根据ID查询医生详细信息 -->
	<select id="findDoctorById" parameterType="com.bluemobi.pro.entity.Doctor" resultMap="doctorMap">
		SELECT
			t.ID,
			t.NAME,
			t.DETAIL,
			t.MOBILE,
			t.HEAD,
			t.GENDER,
			t.AGE,
			t.ONLINE,
			t.BIRTHDAY
		FROM
			t_doctor t
		WHERE
			t.ID = #{id}
	</select>
</mapper> 